@page
@model ResetPasswordModel
@{
    ViewData["Title"] = "Reset Password";
}
<form method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="RPModel.Password">New Password</label>
        <input asp-for="RPModel.Password" class="form-control" />
        <span asp-validation-for="RPModel.Password" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="RPModel.ConfirmPassword">Confirm Password</label>
        <input asp-for="RPModel.ConfirmPassword" class="form-control" />
        <span asp-validation-for="RPModel.ConfirmPassword" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Reset Password</button>
</form>